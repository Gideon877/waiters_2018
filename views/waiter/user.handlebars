<title>Waiter Home</title>

<body>
    <hr>
    <div class="ui container">
        <div class="ui icon menu" id=" ">
            <div class="item">
                <a href="/waiters/{{user._id}}">
                    <i class="home icon"></i>
                </a>
            </div>
            <div class="item">
                <i class="info icon"></i>
                <a href="#"></a>
            </div>
            <div class="item">

                <a href="/waiters/{{user._id}}">
                    <i class="clipboard check icon"></i>
                </a>
            </div>

            <div class="right item">
                <a href="/logout">
                    <i class="sign out icon"></i>
                </a>
            </div>
            <div class="ui compact menu">
                <a class="item">
                    <i class="icon mail"></i> {{!-- Messages --}}
                    <div class="floating ui red label">{{messageCount}}</div>
                </a>
                <a class="item" href="/friends/{{user._id}}">
                    <i class="icon users"></i> {{!-- Friends --}}
                    <div class="floating ui teal label">{{friendsCount}}</div>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="ui container">
        <h2 class="ui center aligned purple icon header">
            <i class="circular settings icon"></i>
            <div class="sub header"><b>{{user.firstName}}</b>, manage your account settings and set e-mail preferences.</div>

        </h2>
    </div>

    <div class="ui container">
        <h4 class="ui horizontal teal divider header">
            <i class="address card icon"></i>
            About
        </h4>
        <table class="ui definition table">
            <tbody>
                <tr>
                    <td class="two wide column">Full Name</td>
                    <td>{{friend.firstName}} {{friend.lastName}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{friend.email}}</td>
                </tr>
                <tr>
                    <td>Username</td>
                    <td>{{friend.username}}</td>
                </tr>
                <tr>
                    <td>Updated</td>
                    <td>{{friend.timestamp.lastUpdated}}</td>
                </tr>
                <tr>
                    <td>Active</td>
                    <td>{{friend.isUserActive}}</td>
                </tr>
            </tbody>
        </table>
        {{!--
        <button class="ui primary button" disabled>Update</button> --}}
    </div>
    <hr>

    <form action="" method="post">
        <div class="ui container">
            <h4 class="ui horizontal teal divider header">
                <i class="hourglass icon"></i>
                Working Days
            </h4>
            <hr>
            <div class="ui three column grid">
                {{#each friend.days}}
                <div class="column">
                    <div class="ui raised segment">
                        <a class="item">
                            <div class="content">
                                <div class="header">
                                    <i class="right triangle icon"></i>{{this}}</div>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
            <hr>
            <button class="ui primary button">Add</button>
        </div>

    </form>
</body>