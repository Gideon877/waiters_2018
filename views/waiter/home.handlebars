<title>Waiter Home</title>
</head>

<body>
    <div class="ui container">
        <div class="ui labeled icon menu" id="you can remove, compact, labeled">
            <div class="item">
                <i class="home icon"></i>Home
            </div>
            <div class="item">
                <i class="info icon"></i>
                <a href="#">About</a>
            </div>
            <div class="item">
                <i class="users icon"></i>
                <a href="#">Services</a>
            </div>
            <div class="right item">
                <i class="sign out icon"></i>
                <a href="/logout">Sign-Out</a>
            </div>
            <div class="item">
                <i class="user circle icon"></i>
                <a href="#">{{user.firstName}}</a>
            </div>
        </div>
    </div>

    <div class="ui container">
        <hr>
        <br>
        <h2 class="ui header">
            <i class="settings icon"></i>
            <div class="content">
                Last Updated: {{user.timestamp.lastUpdated}}
                <div class="sub header">Manage your shift.
                   
                <p>
                    {{#if messages.error}}
                        <em class="error" style="color:red">
                            {{messages.error}}
                        </em>
                    {{else}}
                         </em> working days.</em></div>
                    {{/if}}
                </p>
            </div>
        </h2>

        <hr>
        <br>
        <form action="" method="POST">
            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Days</th>
                        <th>Waiters</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each days}}
                    <tr class="{{this.class}}">
                        <td>
                            <div class="ui checkbox">
                                <input type="checkbox" id="check" {{this.statusBtn}} name="shift" value="{{this.day}}">
                                <label></label>
                            </div>
                        </td>
                        <td>
                            <h4 class="ui image header">
                                <i class="calendar alternate outline icon"></i>
                                <div class="content">
                                    {{this.day}}
                                    <div class="sub header">{{this.status}}
                                    </div>
                                </div>
                            </h4>
                        </td>
                        <td>
                            <div class="ui horizontal list">
                                {{#each names}}
                                <div class="item">
                                    <i class="user icon"></i>
                                    <div class="content">
                                        <div class="header">{{this}}</div>
                                        <div class="description">
                                            <a>
                                                <b>Last Updated</b>
                                            </a> just now.</div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </td>
                        <td>
                            <i class="icon {{this.checkmark}}"></i> {{state}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <button class="ui primary button" id="btncheck">
                Save
            </button>
        </form>
    </div>
</body>