<title>Friends</title>
</head>

<body>
    <hr>
    <div class="ui container">
        <div class="ui icon menu">
            <div class="item">
                <a href="/waiters/{{user._id}}">
                    <i class="home icon"></i>
                </a>
            </div>
            <div class="item">
                <i class="info icon"></i>
                <a href="#"></a>
            </div>
            <div class="item">
                <a href="/settings/{{user._id}}">
                    <i class="user circle icon"></i>
                </a>
            </div>

            <div class="right item">
                <a href="/logout">
                    <i class="sign out icon"></i>
                </a>
            </div>
            <div class="ui compact menu">
                <a class="item">
                    <i class="icon mail"></i> Messages
                    <div class="floating ui red label">{{messageCount}}</div>
                </a>
                <a class="item" href="/friends/{{user._id}}">
                    <i class="icon users"></i> Friends
                    <div class="floating ui teal label">{{friendsCount}}</div>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="ui container">
        <div class="ui message">
            <div class="header">
                Hello, {{user.firstName}}. This is a waiter web app.
            </div>
            <ul class="list">
                <li>You can now manage your friends here</li>
                {{#if messages.error}}
                <li>
                    <em class="error">{{messages.error}}</em>
                </li>
                {{else}}
                <li>Select a friend to view more details
                    <em>
                        <b style="color: blue">save</b>
                    </em> button to submit</li>
                {{/if}}
            </ul>
        </div>
        <hr>
    </div>

    <div class="ui container">
        <h4 class="ui horizontal divider header">
            <i class="users icon icon"></i>
            Friends
        </h4>
        <div class="ui four stackable link cards">
            {{#each userFriends}}
            <div class="card">
                <div class="image">
                    <img src="/images/{{imagePathName}}">
                </div>
                <div class="content">
                    <div class="header"><a href="/waiter/{{user._id}}/friend/{{_id}}" class="header">{{firstName}}</a></div>
                    <div class="meta">
                        <a>Friends</a>
                    </div>
                    <div class="description">
                        {{firstName}} is an software developer living in Cape Town.
                    </div>
                </div>
                <div class="extra content">
                    <span class="right floated">
                        last seen {{lastSeen}}
                    </span>
                    <span>
                        <a href="">
                            <i class="user icon"></i>
                            75 Friends
                        </a>
                    </span>
                </div>
            </div>
            {{/each}}
        </div>

        {{!-- List of friends you not connected with   usersToConnect--}}

        <h4 class="ui horizontal divider header">
            <i class="disabled users icon icon"></i>
            People you may know.
        </h4>

        <div class="ui middle aligned divided list">
            {{#each usersToConnect}}
            <div class="item">
                <div class="right floated content">
                    <div class="ui button">Add</div>
                </div>
                <img class="ui avatar image" src="/images/{{imagePathName}}">
                <div class="content">
                    {{firstName}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>