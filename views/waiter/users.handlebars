<title>Friends</title>
</head>

<body>
    <hr>
    <div class="ui container">
        <div class="ui icon menu">
            <div class="item">
                <a href="/waiters/{{user._id}}">
                    <i class="home icon"></i>
                </a>
            </div>
            <div class="item">
                <i class="info icon"></i>
                <a href="#"></a>
            </div>
            <div class="item">
                <a href="/settings/{{user._id}}">
                    <i class="user circle icon"></i>
                </a>
            </div>

            <div class="right item">
                <a href="/logout">
                    <i class="sign out icon"></i>
                </a>
            </div>
            <div class="ui compact menu">
                <a class="item">
                    <i class="icon mail"></i> {{!-- Messages --}}
                    <div class="floating ui red label">{{messageCount}}</div>
                </a>
                <a class="item" href="/friends/{{user._id}}">
                    <i class="icon users"></i> {{!-- Friends --}}
                    <div class="floating ui teal label">{{friendsCount}}</div>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="ui container">
        <div class="ui message">
            <div class="header">
                Hello, {{user.firstName}}. This is a waiter web app.
            </div>
            <ul class="list">
                <li>You can now manage your friends here</li>
                {{#if messages.error}}
                <li>
                    <em class="error" >{{messages.error}}</em>
                </li>
                {{else}}
                <li>Select a friend to view more details
                    <em>
                        <b style="color: blue">save</b>
                    </em> button to submit</li>
                {{/if}}
            </ul>
        </div>
        <hr>
    </div>

    <div class="ui container">
        <h4 class="ui horizontal divider header">
            <i class="bar chart icon"></i>
            About {{user.firstName}} {{user.lastName}}
        </h4>
        <table class="ui definition table">
            <tbody>
                <tr>
                    <td class="two wide column">Full Name</td>
                    <td>{{user.firstName}} {{user.lastName}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{user.email}}</td>
                </tr>
                <tr>
                    <td>Cell</td>
                    <td>{{user.cell}}</td>
                </tr>
                <tr>
                    <td>Username</td>
                    <td>{{user.username}}</td>
                </tr>
                <tr>
                    <td>Updated</td>
                    <td>{{user.timestamp.lastUpdated}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>