<title>Waiter Settings</title>
</head>

<body>
    <hr>
    <div class="ui container">
        <div class="ui icon menu" id="you can remove, compact, labeled">
            <div class="item">

                <a href="/waiters/{{user._id}}">
                    <i class="home icon"></i>
                </a>
            </div>
            <div class="item">
                <i class="info icon"></i>
                <a href="#"></a>
            </div>
            <div class="item">

                <a href="/waiters/{{user._id}}">
                    <i class="clipboard check icon"></i>
                </a>
            </div>

            <div class="right item">
                <a href="/logout">
                    <i class="sign out icon"></i>
                </a>
            </div>
            <div class="ui compact menu">
                <a class="item">
                    <i class="icon mail"></i> Messages
                    <div class="floating ui red label">1</div>
                </a>
                <a class="item">
                    <i class="icon users"></i> Friends
                    <div class="floating ui teal label">3</div>
                </a>
            </div>
        </div>
    </div>
    <hr>
    <div class="ui container">
        <h2 class="ui center aligned purple icon header">
            <i class="circular settings icon"></i>
            <div class="sub header"><b>{{user.firstName}}</b>, manage your account settings and set e-mail preferences.</div>
            
        </h2>
    </div>

    <div class="ui container">
        <h4 class="ui horizontal teal divider header">
            <i class="address card icon"></i>
            Details
        </h4>
        <table class="ui definition table">
            <tbody>
                <tr>
                    <td class="two wide column">Full Name</td>
                    <td>{{user.firstName}} {{user.lastName}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{user.email}}</td>
                </tr>
                <tr>
                    <td>Cell</td>
                    <td>{{user.cell}}</td>
                </tr>
                <tr>
                    <td>Username</td>
                    <td>{{user.username}}</td>
                </tr>
                <tr>
                    <td>Updated</td>
                    <td>{{user.timestamp.lastUpdated}}</td>
                </tr>
            </tbody>
        </table>
        {{!--
        <button class="ui primary button" disabled>Update</button> --}}
    </div>
    <hr>

    <div class="ui container">

        <h4 class="ui horizontal teal divider header">
            <i class="hourglass icon"></i>
            Working Days
        </h4>
        <hr>
        <div class="ui three column grid">
            {{#each user.days}}
            <div class="column">
                <div class="ui raised segment">
                    <a class="item">
                        <div class="content">
                            <div class="header">
                                <i class="right triangle icon"></i>{{this}}</div>
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
        <hr>
        <button class="ui primary button" disabled>Deactivate Account</button>
    </div>

</body>

