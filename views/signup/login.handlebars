<title>Login</title>

</head>

<body>

    <div class="ui container">
        <h1></h1>
        <div class="page-login">
            <div class="ui centered grid container">
                <div class="nine wide column">
                    {{#if messages.error}}
                    <div class="ui icon warning message">
                        <i class="lock icon"></i>
                        <div class="content">
                            <div class="header">
                                {{messages.errorTitle}}
                            </div>
                            <p><b class="error">{{messages.error}}</b></p>
                        </div>
                    </div>
                    {{else}}
                    <div class="ui icon info message">
                        <i class="unlock alternate icon"></i>
                        <div class="content">
                            <div class="header">
                                Login?
                            </div>
                            <p>Please enter your username and password!</p>
                        </div>
                    </div>
                    {{/if}}

                    <div class="ui fluid card">
                        <div class="content">
                            <form class="ui form" method="POST">
                                <div class="field">
                                    <input type="text" name="username" placeholder="Username" value="gideon877">
                                </div>
                                <div class="field">
                                    <input type="password" name="password" placeholder="Password" value="1234">
                                </div>
                                <button class="ui primary labeled icon button" type="submit">
                                    <i class="unlock alternate icon"></i>
                                    Login
                                </button>
                                <a href="/" class="ui red button" >Cancel</a>
                                <div class="ui message">
                                    Don't have an account? <a href="/register">Sign Up</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



